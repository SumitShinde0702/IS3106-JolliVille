<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title>JolliVille Admin Manage Users</title>
  <style>
    body {
      background-color: #d0f0f0; /* Light blue-green background */
      font-family: 'Poppins', sans-serif;
      padding: 20px;
    }
    .container {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
    }
  </style>
</head>

<body>
  <div class="container">

    <%- include("sidebar") %> <!-- Include the sidebar.ejs file -->

    <h1>Manage Users</h1>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Gender</th>
          <th>DOB</th>
          <th>Created</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function({_id, name, gender, dob, created}) { %>
        <tr>
          <td><%= _id %></td>
          <td><%= name %></td>
          <td><%= gender %></td>
          <td><%= dob %></td>
          <td><%= created %></td>

          <td>
            <a href="/users/<%= _id %>/edit" class="btn btn-warning">Edit</a>
          </td>

          <td>
            <form action="/users/<%= _id %>/delete" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
