{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "paths": {
      "@/*": ["./*"] // this means @ points to the root of your project
    },
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./server.ts",
    ".next/types/**/*.ts",
    "speech-recognition.d.ts",    // Explicitly include the custom declaration file
    "app/journal/*.tsx"                    // Include all files in the src directory
  ]
}
